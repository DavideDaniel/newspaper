<html>
  <head>
    <title></title>
  </head>
  <body>
    
    <% @articles.each do |article| %>
      <div class="row col-md-12 text-center"><%= link_to article.headline, article_path(article) %>
      </div>
      <br>
      
      <div class="row collapse col-md-12 text-center id='article<%=article.id %>'"><%= link_to article.author.name, author_path(article.author) %></div>
      <br>
      <%= article.content %>
      <br>
      <%= image_tag article.photo_url, height:300, class: 'center-block img-circle' %>
      <br>
    <% end %>

  </body>
</html>
